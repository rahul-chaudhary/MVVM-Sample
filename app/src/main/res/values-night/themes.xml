<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="Base.Theme.MvvmSample" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Customize your dark theme here. -->

        <!-- Primary color for the app bar and other UI elements -->
        <item name="colorPrimary">@color/pink</item>

        <!-- Accent color for widgets and UI controls -->
        <item name="colorAccent">@color/blue_light</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/black</item>

        <!-- Background color for the app's content area -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Color of the status bar -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Text color for primary content -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Text color for secondary content -->
        <item name="android:textColorSecondary">@color/white</item>

        <!-- Customize other attributes as needed -->
    </style>
    <style name="Theme.MvvmSample" parent="Base.Theme.MvvmSample" />

    <style name="MyAppleBlueText" >
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

</resources>
